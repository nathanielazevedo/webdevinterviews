{
  "name": "@webdevinterviews/backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "schema:generate": "tsx scripts/generate-schema.ts",
    "schema:watch": "tsx watch scripts/generate-schema.ts",
    "types:generate": "npm run schema:generate && npx openapi-typescript generated/api-schema.json -o generated/types.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.74.0",
    "@webdevinterviews/shared": "*",
    "cors": "^2.8.5",
    "destroy": "^1.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-openapi-generator": "^1.2.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@typescript-eslint/typescript-estree": "^8.46.0",
    "define-data-property": "^1.1.4",
    "eslint": "^9.37.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "openapi-typescript": "^7.9.1",
    "tsx": "^4.19.1",
    "typescript": "^5.0.0"
  }
}
