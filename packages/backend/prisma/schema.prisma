// packages/backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Battle {
  id                   String    @id @default(uuid()) @db.Uuid
  status               String    @default("waiting")
  admin_user_id        String?   @db.Uuid
  started_at           DateTime? @db.Timestamptz(6)
  completed_at         DateTime? @db.Timestamptz(6)
  created_at           DateTime  @default(now()) @db.Timestamptz(6)
  updated_at           DateTime  @updatedAt @db.Timestamptz(6)
  scheduled_start_time DateTime? @db.Timestamptz(6)
  duration_minutes     Int?
  auto_end_time        DateTime? @db.Timestamptz(6)
  ended_by             String?
  selected_question_id Int?

  // Relations
  participations   BattleParticipation[]
  questionPool     BattleQuestionPool[]
  selectedQuestion Question?             @relation("SelectedQuestion", fields: [selected_question_id], references: [id])

  @@map("battles")
}

model BattleParticipation {
  id              String   @id @default(uuid()) @db.Uuid
  battle_id       String   @db.Uuid
  user_id         String   @db.Uuid
  tests_passed    Int      @default(0)
  total_tests     Int      @default(0)
  completion_time Int?
  placement       Int?
  joined_at       DateTime @default(now()) @db.Timestamptz(6)
  is_connected    Boolean  @default(true)

  // Relations
  battle Battle @relation(fields: [battle_id], references: [id], onDelete: Cascade)

  @@unique([battle_id, user_id])
  @@map("battle_participations")
}

model Question {
  id                 Int      @id @default(autoincrement())
  title              String
  slug               String   @unique
  difficulty         String
  problem_statement  String   @db.Text
  function_signature String?  @db.Text
  test_cases         Json     @default("[]")
  examples           Json?
  constraints        String?
  hints              Json?
  tags               Json?
  leetcode_number    Int?     @unique
  starter_code       String?  @db.Text
  solution           String?  @db.Text
  created_at         DateTime @default(now()) @db.Timestamptz(6)
  updated_at         DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  battlePools        BattleQuestionPool[]
  selectedForBattles Battle[]                  @relation("SelectedQuestion")
  userPerformances   UserQuestionPerformance[]

  @@map("questions")
}

model BattleQuestionPool {
  id          Int     @id @default(autoincrement())
  battle_id   String  @db.Uuid
  question_id Int
  is_current  Boolean @default(false)

  // Relations
  battle   Battle   @relation(fields: [battle_id], references: [id], onDelete: Cascade)
  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)

  @@unique([battle_id, question_id])
  @@map("battle_question_pools")
}

model LocationPoint {
  id         Int      @id @default(autoincrement())
  latitude   Float
  longitude  Float
  country    String?
  region     String?
  locality   String?
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@unique([latitude, longitude])
  @@map("location_points")
}

model UserQuestionPerformance {
  id                    Int      @id @default(autoincrement())
  user_id               String   @db.Uuid
  question_id           Int
  fastest_completion_ms Int? // Fastest completion time in milliseconds
  total_attempts        Int      @default(0)
  successful_attempts   Int      @default(0)
  last_attempted_at     DateTime @default(now()) @db.Timestamptz(6)
  created_at            DateTime @default(now()) @db.Timestamptz(6)
  updated_at            DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)

  @@unique([user_id, question_id])
  @@map("user_question_performance")
}

// Battle Attacks/Power-ups System
model UserWallet {
  id         Int      @id @default(autoincrement())
  user_id    String   @unique @db.Uuid
  coins      Int      @default(100) // Starting coins
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  userAttacks UserAttack[]
  attackUsage AttackUsage[]

  @@map("user_wallets")
}

model AttackType {
  id          Int      @id @default(autoincrement())
  name        String   @unique // e.g., "Code Eraser", "Freeze Ray", "Time Bomb"
  description String   @db.Text
  cost        Int // Cost in coins
  duration_ms Int? // Duration of effect in milliseconds (null for instant)
  cooldown_ms Int? // Cooldown before same attack can be used again
  target_type String // "all" | "individual" | "self"
  effect_type String // "erase_code" | "freeze_input" | "slow_typing" | "extra_time" | "hints"
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  userAttacks      UserAttack[]
  attackUsage      AttackUsage[]
  battleAttackLogs BattleAttackLog[]

  @@map("attack_types")
}

model UserAttack {
  id             Int      @id @default(autoincrement())
  user_id        String   @db.Uuid
  attack_type_id Int
  quantity       Int      @default(1) // How many of this attack the user owns
  purchased_at   DateTime @default(now()) @db.Timestamptz(6)

  // Relations
  userWallet UserWallet @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  attackType AttackType @relation(fields: [attack_type_id], references: [id], onDelete: Cascade)

  @@unique([user_id, attack_type_id])
  @@map("user_attacks")
}

model AttackUsage {
  id             Int       @id @default(autoincrement())
  user_id        String    @db.Uuid // User who used the attack
  battle_id      String    @db.Uuid
  attack_type_id Int
  target_user_id String?   @db.Uuid // Null if targeting all or self
  used_at        DateTime  @default(now()) @db.Timestamptz(6)
  effect_ends_at DateTime? // When the effect expires (for timed effects)

  // Relations
  userWallet UserWallet @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  attackType AttackType @relation(fields: [attack_type_id], references: [id], onDelete: Cascade)

  @@map("attack_usage")
}

model BattleAttackLog {
  id             Int       @id @default(autoincrement())
  battle_id      String    @db.Uuid
  attacker_id    String    @db.Uuid
  attack_type_id Int
  target_user_id String?   @db.Uuid // Null if targeting all
  effect_data    Json? // Store any additional effect parameters
  created_at     DateTime  @default(now()) @db.Timestamptz(6)
  expires_at     DateTime? // When this effect expires

  // Relations
  attackType AttackType @relation(fields: [attack_type_id], references: [id], onDelete: Cascade)

  @@map("battle_attack_logs")
}

